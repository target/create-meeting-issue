{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "esnext",
		"rootDir": "./src",
		"moduleResolution": "node",
		"baseUrl": "./",
		"sourceMap": true,
		"outDir": "./dist",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"newLine": "lf",
		"resolveJsonModule": true
	},
	"exclude": ["./dist", "./node_modules", "src/lib/__tests__", "./coverage", "vitest.config.ts"]
}
